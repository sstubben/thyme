  <div class="col-md-6 col-md-offset-3">
<%= form_for @user, url: {action: "create"} do |f| %>
<% if @user.errors.any? %>
  <%= render 'shared/error_messages' %>
<% end %>

  <div class="form-group">
    <%= f.text_field :full_name, placeholder: :full_name, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.text_field :email, placeholder: :email, type: "email", class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon">+60</span>
      <%= f.text_field :mobile_number, placeholder: "Mobile number, e.g. 185259876", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_field :company_name, placeholder: :company_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :company_address, placeholder: :company_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Signup now!', class: "btn btn-primary" %>
  </div>


  </div>

<% end %>
